output_file="$1"
log_interval="$2"
timeout="$3"

start_epochtime=$(date +%s)

# Create label row
if [ ! -s "${output_file}" ]; then
    echo "time,avg_cpu_freq" > ${output_file}
fi

while true
do
    current_epochtime=$(date +%s)
    timestamp=$(date +'%Y-%m-%d %H:%M:%S')

    # Log average of cpu frequencies
    avg_cpu=$(awk '/MHz/ {sum+=$4; count++} END {print sum/count}' /proc/cpuinfo)

    # Other potential parameters to log
    # cat /sys/class/power_supply/BAT0/power_now

    echo "${timestamp},${avg_cpu}" >> ${output_file}
    elapsed_time=$(awk "BEGIN {print int(${current_epochtime} - ${start_epochtime})}")
    if [ ${elapsed_time} -gt ${timeout} ]; then
        break
    fi
    sleep ${log_interval}
done
